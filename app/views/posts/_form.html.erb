<div class="bg-white shadow sm:rounded-lg p-6">
  <%= form_with(model: post, local: true, class: "space-y-6") do |f| %>
    <% if post.errors.any? %>
      <div class="bg-red-50 p-4 rounded-md">
        <h2 class="text-red-800 text-sm font-medium">
          <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
        </h2>
        <ul class="mt-2 text-red-700 text-sm">
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.text_area :content,
          placeholder: "What's on your mind?",
          class: "form-input h-24" %>
    </div>

    <div>
      <%= f.label :media_files, class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :media_files,
          multiple: true,
          accept: 'image/*,video/*',
          class: "mt-1 block w-full text-sm text-gray-500
                 file:mr-4 file:py-2 file:px-4
                 file:rounded-md file:border-0
                 file:text-sm file:font-semibold
                 file:bg-indigo-50 file:text-indigo-700
                 hover:file:bg-indigo-100" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Post", class: "btn-primary" %>
    </div>
  <% end %>
</div>
