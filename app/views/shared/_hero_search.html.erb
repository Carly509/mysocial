<%= form_with(url: find_flights_path, method: :post, local: true, class: '@container') do |f| %>
  <div class="@[480px]:p-4">
    <div
      class="flex min-h-[480px] flex-col gap-6 bg-cover bg-center bg-no-repeat @[480px]:gap-8 @[480px]:rounded-xl items-start justify-end px-4 pb-10 @[480px]:px-10"
      style="background-image: linear-gradient(rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.4) 100%), url('https://cdn.usegalileo.ai/sdxl10/91c8cdd2-77fe-465f-a4bd-67f0df4a6624.png');"
    >
      <h1 class="text-white text-4xl font-black leading-tight tracking-[-0.033em] @[480px]:text-5xl @[480px]:font-black @[480px]:leading-tight @[480px]:tracking-[-0.033em] text-center">
        Find the best flight deals
      </h1>
      <div class="flex w-full max-w-[480px] h-14 @[480px]:h-16">
        <div class="flex w-full flex-1 items-stretch rounded-xl h-full">
          <div class="text-[#617b89] flex border border-[#dbe2e6] bg-white items-center justify-center pl-[15px] rounded-l-xl border-r-0">
            <%= render 'shared/icons/search' %>
          </div>

          <%= f.text_field :origin,
              placeholder: "Where are you leaving from?",
              class: "form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-xl text-[#111518] focus:outline-0 focus:ring-0 border border-[#dbe2e6] bg-white focus:border-[#dbe2e6] h-full placeholder:text-[#617b89] px-[15px] rounded-r-none border-r-0 pr-2 rounded-l-none border-l-0 pl-2 text-sm font-normal leading-normal @[480px]:text-base @[480px]:font-normal @[480px]:leading-normal"
          %>

          <div class="flex items-center justify-center rounded-r-xl border-l-0 border border-[#dbe2e6] bg-white pr-[7px]">
            <%= f.submit "Where to?",
                name: 'destination',
                class: "flex min-w-[84px] max-w-[480px] cursor-pointer items-center justify-center overflow-hidden rounded-xl h-10 px-4 @[480px]:h-12 @[480px]:px-5 bg-[#21a2ed] text-white text-sm font-bold leading-normal tracking-[0.015em] @[480px]:text-base @[480px]:font-bold @[480px]:leading-normal @[480px]:tracking-[0.015em]"
            %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
