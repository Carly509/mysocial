<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex items-center">
        <div class="flex-shrink-0 h-24 w-24">
          <%= image_tag @profile.avatar_url, class: "h-24 w-24 rounded-full object-cover" %>
        </div>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-900"><%= @profile.username %></h1>
          <p class="mt-1 max-w-2xl text-sm text-gray-500"><%= @profile.bio %></p>
        </div>
        <% if current_user == @profile.user %>
          <%= link_to "Edit Profile", edit_profile_path(@profile),
              class: "ml-auto btn-secondary" %>
        <% else %>
          <%= render "follows/button", user: @profile.user %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-lg font-medium text-gray-900">Posts</h2>
    <div class="mt-4 space-y-6">
      <%= render @posts %>
    </div>
  </div>
</div>
