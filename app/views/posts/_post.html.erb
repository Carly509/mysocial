<div class="bg-white shadow sm:rounded-lg mb-4" id="<%= dom_id(post) %>">
  <div class="p-6">
    <div class="flex items-center">
      <%= link_to profile_path(post.user.profile), class: "flex-shrink-0" do %>
        <%= image_tag post.user.profile.avatar_url, class: "h-10 w-10 rounded-full" %>
      <% end %>

      <div class="ml-3">
        <%= link_to post.user.profile.username, profile_path(post.user.profile),
            class: "text-sm font-medium text-gray-900" %>
        <p class="text-sm text-gray-500">
          <%= time_ago_in_words(post.created_at) %> ago
        </p>
      </div>

      <% if current_user == post.user %>
        <div class="ml-auto">
          <%= button_to post_path(post),
              method: :delete,
              class: "text-gray-400 hover:text-gray-500",
              data: { confirm: "Are you sure?" } do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-4">
      <p class="text-gray-900"><%= post.content %></p>

      <% if post.media_files.attached? %>
        <div class="mt-4 grid grid-cols-2 gap-4">
          <% post.media_files.each do |media| %>
            <% if media.video? %>
              <%= video_tag url_for(media),
                  controls: true,
                  class: "w-full rounded-lg shadow-lg" %>
            <% else %>
              <%= image_tag media,
                  class: "w-full h-64 object-cover rounded-lg shadow-lg" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex items-center space-x-6 border-t border-gray-200 pt-4">
      <%= render "likes/button", post: post %>

      <%= link_to post_path(post), class: "flex items-center space-x-2 text-gray-500" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span><%= post.comments.count %> comments</span>
      <% end %>

      <%= button_to repost_post_path(post),
          method: :post,
          class: "flex items-center space-x-2 text-gray-500" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        <span>Repost</span>
      <% end %>
    </div>
  </div>
</div>
