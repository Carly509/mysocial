<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <h1 class="text-lg font-medium text-gray-900">Edit Profile</h1>

      <%= form_with(model: @profile, local: true, class: "mt-5") do |f| %>
        <div class="space-y-6">
          <div>
            <%= f.label :avatar, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1 flex items-center">
              <%= image_tag @profile.avatar_url, class: "h-12 w-12 rounded-full" %>
              <%= f.file_field :avatar, class: "ml-5 btn-secondary" %>
            </div>
          </div>

          <div>
            <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :username, class: "form-input" %>
          </div>

          <div>
            <%= f.label :bio, class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :bio, rows: 3, class: "form-input" %>
          </div>

          <div class="flex justify-end">
            <%= f.submit "Update Profile", class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
